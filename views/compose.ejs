<%- include('partials/header'); -%>

<form action="/compose" method="post">
<div style="margin-bottom: 1rem;">
    <h1>Compose</h1>
    <label class="form-label">Title</label>
    <input type="text" class="form-control" name="postTitle" placeholder="Heading">
  </div>
  <div >
    <label class="form-label">Post</label>
    <textarea class="form-control"  name="postBody" placeholder="Post" rows="5" cols="30"></textarea>
    
    <button type="submit" class="btn btn-primary btn-sm" style= "margin-top:1rem;">Publish</button>
</div>
</form>
